<% unless current_user == user %>
  <% if current_user.favoriting?(other_post) %>
    <%= form_with(model: current_user.favorites.find_by(favorite_id: favorite.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :favorite_id, user.id %>
      <%= f.submit 'Unlikes', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :favorite_id, favorite.id %>
      <%= f.submit 'Likes', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>